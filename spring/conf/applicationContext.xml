<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="author1"
		  scope="singleton" 
		  class="com.study.spring.case01.Author">
		<property name="sex">
			<value>男</value>
		</property>
		<property name="name">
			<value>John</value>
		</property>
		<property name="age">
			<value>18</value>
		</property>			  
	</bean>
	
	<bean id="author2"
		  scope="singleton" 
		  class="com.study.spring.case01.Author">
		<constructor-arg value="A" index="1"></constructor-arg>
		<constructor-arg value="女" index="0"></constructor-arg>
		<constructor-arg value="19" index="2" type="java.lang.Double"></constructor-arg>		  
	</bean>
		  
</beans>
